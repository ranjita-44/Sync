
{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "browse-lite",
            "request": "launch",
            "name": "Browse Lite: Launch",
            "url": "http://localhost:3000"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:80",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${webRoot}/*"
            }
        }
    ]
}